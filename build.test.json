{
  "_comments": "ES2020 adds support for dynamic imports and import.meta",
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "baseUrl": "."
  },
  "include": ["./src/**/*", "./test/**/*"],
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"],
    "categoryOrder": [
      "Component",
      "Attributes",
      "State",
      "Operations",
      "Events",
      "Metadata: Attributes",
      "Metadata: State",
      "Metadata: Behavior",
      "*"
    ],
    "readme": "./README.md",
    "excludePrivate": true,
    "excludeProtected": true,
    "disableSources": true,
    "categorizeByGroup": false,
    "kindSortOrder": [
      "Reference",
      "Project",
      "Module",
      "Namespace",
      "Class",
      "Enum",
      "EnumMember",
      "Interface",
      "TypeAlias",
      "Constructor",
      "Property",
      "Variable",
      "Function",
      "Accessor",
      "Method",
      "ObjectLiteral",
      "Parameter",
      "TypeParameter",
      "TypeLiteral",
      "CallSignature",
      "ConstructorSignature",
      "IndexSignature",
      "GetSignature",
      "SetSignature"
    ],
    "sort": ["kind"],
    "name": "Web Component",
    "hideGenerator": true,
    "plugin": ["typedoc-plugin-merge-modules", "typedoc-vscode-theme"],
    "theme": "my-theme",
    "mergeModulesMergeMode": "module"
  }
}
